extends layout

block style
    include css/set.css

block content
    form(method='POST' action='/set/')
        #content
            .tablew
                h5=topic
                table.table
                    tr
                        th Set Name
                        th Actions
                    for set in sets
                        tr
                            td=set.setName
                            td
                                div.actionItems
                                    a(href='/set/' + set.setId)
                                        i.fas.fa-edit
                                    a(href='/set/delete/' + set.setId)
                                        i.fas.fa-trash-alt
                                    a(href='/question/getAll/' + set.setId)
                                        i.fas.fa-arrow-right
                    tr
                        td
                            input.form-control(type='text' id='setName' name='setName' required)
                            input.form-control(type='hidden' id='topicId' name='topicId' value=topicId required)
                        td
                            div.actionItems
                                button(type='submit' class='btn btn-success')
