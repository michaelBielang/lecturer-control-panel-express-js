extends layout

block style
    include css/table.css

block content
    form(method='POST' action='/set/update')
        #content
            p.title Set
            table.table.table-striped
                tr
                    th Set Id
                    th Set Name
                    th Actions
                tr
                    td
                        input.form-control(type='text' id='setId' value=set.setId name='setId' readonly required)
                    td
                        input.form-control(type='text' id='setName' placeholder=set.setName name='setName' required)
                    td
                        div.actionItems
                            button(type='submit' class='btn btn-success')
                                i.fas.fa-save

