extends layout

block style
    include css/table.css

block content
    form(method='POST' action='/topic/update')
        #content
            p.title Topic
            table.table.table-striped
                tr
                    th Topic Id
                    th Topic Name
                    th Actions
                tr
                    td
                        input.form-control(type='text' id='topicId' value=topic.topicId name='topicId' readonly required)
                    td
                        input.form-control(type='text' id='topicName' placeholder=topic.topicName name='topicName' required)
                    td
                        div.actionItems
                            button(type='submit' class='btn btn-success')
                                i.fas.fa-save

