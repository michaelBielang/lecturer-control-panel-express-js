extends layout

block style
    include css/home.css

block content
    #content
        form(method='POST' action='/dvw/subject/')
            div.tablew
                table.table
                    tr
                        th Fach
                        th Bearbeiten
                        th Löschen
                        th Zum Thema
                    for subject in subjects
                        tr
                            td=subject.subjectName
                            td
                                div.actionItems
                                    a(href='subject/' + subject.subjectId)
                                        i.fas.fa-edit
                            td
                                div.actionItems
                                    a(href='subject/delete/' + subject.subjectId)
                                        i.fas.fa-trash-alt
                            td
                                div.actionItems
                                    a(href='topic/getAll/' + subject.subjectId)
                                        i.fas.fa-arrow-right
                    tr
                        td Neues Fach:
                        td
                            input.form-control(type='text' id='subjectName' name='subjectName' placeholder='Fach-Name' required)
                            input.form-control(type='hidden' id='userId' name='userId' value=userId required)
                        td
                            div.actionItems
                                button(type='submit' class='btn btn-success')
                                    i.fas.fa-plus  Hinzufügen
                        td

