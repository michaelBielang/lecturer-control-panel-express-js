extends layout

block content
    p Please fill the form below if you are a new user
    block content
        if errors
            ul
                for error in errors
                    li= error.msg
        -data = data || {}
        .main.container
            .row
                .col-md-6.col-md-offset-3
                    h1 Register
                    form(method='POST' action='/register')
                        div.form-group
                            label(for='email') Email
                            input.form-control(type='text' id='email' placeholder='email' name='email' value=data.email)
                        div.form-group
                            label(for='password') Password
                            input.form-control(type='password' id='password' placeholder='password' name='password' value=data.password)
                        button.btn.btn-primary(type='submit') Register
