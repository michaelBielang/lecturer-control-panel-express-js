extends layout

block style
    include css/table.css

block content
    form(method='POST' action='/question/update')
        #content
            p.title Question
            table.table.table-striped
                tr
                    th Question Id
                    th Question Name
                    th Actions
                tr
                    td
                        input.form-control(type='text' id='topicId' value=question.topicId name='topicId' readonly required)
                    td
                        input.form-control(type='text' id='questionName' placeholder=question.question name='questionName' required)
                    td
                        div.actionItems
                            button(type='submit' class='btn btn-success')
                                i.fas.fa-save

