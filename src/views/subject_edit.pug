extends layout

block style
    include css/table.css

block content
    form(method='POST' action='/subject/update')
        #content
                p.title Subject
                table.table.table-striped
                  tr
                    th Subject Id
                    th Subject Name
                    th Actions
                  tr
                    td
                        input.form-control(type='text' id='subjectId' value=subject.subjectId name='subjectId' readonly required)
                    td
                        input.form-control(type='text' id='subjectName' placeholder=subject.subjectName name='subjectName' required)
                    td
                        div.actionItems
                            button(type='submit' class='btn btn-success')
                                i.fas.fa-save

